            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal" >-->

            <!--<CheckBox-->
                <!--android:id="@+id/x_5"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="80dp"-->
                <!--android:text="五"-->
                <!--android:textColor="@color/black" />-->

            <!--<CheckBox-->
                <!--android:id="@+id/x_6"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="六"-->
