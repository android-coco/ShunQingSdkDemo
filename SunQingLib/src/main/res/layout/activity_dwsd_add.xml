            <!--<CheckBox-->
                <!--android:id="@+id/x_7"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="天"-->
                <!--android:textColor="@color/black" />-->
