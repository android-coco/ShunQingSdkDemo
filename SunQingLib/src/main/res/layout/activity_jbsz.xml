<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0"
                android:fitsSystemWindows="true">

    <include
        android:id="@+id/top"
        layout="@layout/basetitle"/>

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginTop="@dimen/space_16"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="14dip"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="通知设置"
                android:textSize="@dimen/text_size_16"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_12"
                android:layout_weight="1"
                android:text="低电量通知"
                android:textSize="@dimen/text_size_16"/>

            <ImageView
                android:id="@+id/btalow_on"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_30"
                android:layout_marginEnd="@dimen/space_18"
                android:background="@mipmap/opend"
                android:contentDescription="@null"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/btalow_off"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_30"
                android:layout_marginEnd="@dimen/space_18"
                android:background="@mipmap/no_opend"
                android:contentDescription="@null"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_12"
                android:layout_weight="1"
                android:text="开关机通知"
                android:textSize="@dimen/text_size_16"/>

            <ImageView
                android:id="@+id/pwonff_on"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_30"
                android:layout_marginEnd="@dimen/space_18"
                android:background="@mipmap/opend"
                android:contentDescription="@null"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/pwonff_off"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_30"
                android:layout_marginEnd="@dimen/space_18"
                android:background="@mipmap/no_opend"
                android:contentDescription="@null"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="14dip"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="SOS号码"
                android:textSize="@dimen/text_size_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="SOS号码"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_name_rev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:background="@color/white"
                android:hint="(暂未设置)"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="14dip"
                android:layout_marginRight="14dip"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:text="亲情号码"
                android:textSize="@dimen/text_size_16"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="主亲情号码"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_affection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:background="@color/white"
                android:hint="(暂未设置)"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="亲情号码一"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_affection1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:background="@color/white"
                android:hint="(暂未设置)"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="亲情号码二"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_affection2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:background="@color/white"
                android:hint="(暂未设置)"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="亲情号码三"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_affection3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:background="@color/white"
                android:hint="(暂未设置)"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="号码"
                android:textColor="@color/index_black"
                android:textSize="@dimen/text_size_16"/>

            <EditText
                android:id="@+id/terminal_num_rev"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_48"
                android:layout_marginTop="1px"
                android:background="@color/white"
                android:hint="号码修改"
                android:inputType="phone"
                android:paddingEnd="@dimen/space_12"
                android:paddingStart="@dimen/space_12"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/lt_user_inform"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@drawable/btn_found_list_bg"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="用户设置"
                android:textSize="@dimen/text_size_18"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:visibility="gone"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lt_sleep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@drawable/btn_found_list_bg"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_18"/>

            <ImageView
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:visibility="gone"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/lt_sos_call"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_48"
            android:layout_marginTop="1px"
            android:background="@drawable/btn_found_list_bg"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/space_12"
            android:paddingStart="@dimen/space_12"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="亲情号码"
                android:textSize="@dimen/text_size_18"/>

            <ImageView
                android:layout_width="@dimen/space_24"
                android:layout_height="@dimen/space_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/watch_img"
                android:contentDescription="@null"
                android:visibility="visible"/>
        </RelativeLayout>


        <Button
            android:id="@+id/save_wacth_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            />
    </LinearLayout>

</RelativeLayout>